{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -b",
    "build:watch": "tsc -b -w",
    "clean": "lerna run clean",
    "coverage": "jest --coverage",
    "depcheck": "lerna run depcheck",
    "lint": "eslint --ext=js,jsx,ts,tsx .",
    "nuke": "yarn clean && lerna clean -y && rimraf node_modules",
    "release": "lerna publish",
    "test": "jest --maxworkers=60%",
    "test:watch": "jest --maxworkers=60% --watch",
    "verify": "yarn lint && yarn build && yarn depcheck && yarn coverage",
    "watch": "yarn test:watch"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.4",
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@types/update-notifier": "^4.1.1",
    "babel-jest": "^26.3.0",
    "jest": "^26.4.2",
    "jest-audio-reporter": "^2.2.1",
    "jest-progress-tracker": "^2.0.2",
    "jest-watch-repeat": "^2.0.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^0.6.0",
    "npm-check-updates": "^8.0.1"
  }
}
