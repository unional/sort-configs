{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -b",
    "build:watch": "tsc -b -w",
    "clean": "yarn workspaces run clean",
    "coverage": "yarn test --coverage",
    "depcheck": "yarn workspaces run depcheck",
    "lint": "eslint --ext=js,jsx,ts,tsx .",
    "nuke": "yarn clean && yarn workspaces run clean && rimraf node_modules",
    "test": "jest --maxworkers=60%",
    "test:watch": "yarn test --watch",
    "verify": "yarn lint && yarn build && yarn depcheck && yarn coverage",
    "watch": "yarn test:watch"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.10.4",
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@changesets/cli": "^2.10.2",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@types/jest": "^26.0.10",
    "@types/update-notifier": "^4.1.1",
    "assertron": "^7.1.3",
    "babel-jest": "^26.3.0",
    "codacy-coverage": "^3.4.0",
    "commitlint-circle": "^1.0.0",
    "dependency-check": "^4.1.0",
    "eslint": "^7.7.0",
    "eslint-plugin-harmony": "^3.0.1",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "jest-audio-reporter": "^2.2.1",
    "jest-progress-tracker": "^2.0.2",
    "jest-watch-repeat": "^2.0.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^0.6.0",
    "npm-check-updates": "^8.0.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.2"
  }
}
